<div class="container">
    <div class="row">
        <% jobs.forEach(job => { 
            var skillsArray = job.skillset.split(','); %>
            <div class="col-sm">
                <div class="white-border-box">
                    <!-- Content goes here -->
                    <span class="badge badge-primary">
                        <h5> Actively Hiring <img src="/image/graph-up-arrow.svg" alt=""> </h5>
                    </span>
                    <h4 style="color: #FABD45;">
                        <%= job.cname %>
                    </h4>
                    <h5>
                        <%= job.jobcat %> 
                        <SPAN style="color: aqua;">
                            <%= job.jobdesg %>
                        </SPAN>
                    </h5>
                    <br>
                    <br>
                    <h5>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                            <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                        </svg>
                        <%= job.jobloc %>
                    </h5>
                    <br>
                    <% skillsArray.forEach(skill => { %>
                        <span class="badge badge-secondary">
                            <%= skill.trim() %>
                        </span>
                    <% }); %>
                    <br>
                    <br>
                    
                    <a href="/ViewDetails/<%= job.id %>">
                        <button class="btn btn-primary btn-lg btn-block">View details
                        </button>
                    </a>
                </div>
            </div>
        <% }); %>
    </div>
</div>
